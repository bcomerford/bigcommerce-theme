{"components/cart/quick-cart-totals":"\n{{#if cart.items.length}}\n  <div class=\"quick-cart-footer\">\n\n    <div class=\"quick-cart-subtotal\">\n      <div class=\"label\">{{lang 'cart.subtotal'}}:</div>\n      <div class=\"total\">{{cart.sub_total.formatted}}</div>\n    </div>\n\n    <div class=\"quick-cart-actions\">\n      <a href=\"{{urls.checkout.single_address}}\" class=\"button button-primary button-wide checkout-button\">{{lang 'cart.checkout'}}</a>\n      <a href=\"{{urls.cart}}\" class=\"button button-secondary button-wide view-cart-button\">{{lang 'account_general.view_cart'}}</a>\n    </div>\n\n  </div>\n{{/if}}\n"}